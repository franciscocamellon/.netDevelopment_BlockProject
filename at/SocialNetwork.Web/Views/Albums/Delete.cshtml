@model SocialNetwork.Domain.Entities.AlbumModel

@{
    Layout = null;
    ViewData["Title"] = "Delete";
}


<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm())
            {
                <div class="modal-header">
                    <h5 class="modal-title">Deletar álbum</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                @Html.AntiForgeryToken()

                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.CreationDate)
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.CreationDate)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.AlbumName)
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.AlbumName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.NumberOfPictures)
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.NumberOfPictures)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Deletar" class="btn btn-primary" />
                    <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
                </div>
            }
        </div>
    </div>
</div>

