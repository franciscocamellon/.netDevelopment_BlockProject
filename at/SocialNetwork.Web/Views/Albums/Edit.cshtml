@model AlbumViewModel

@{
    Layout = null;
    ViewData["Title"] = "Edit";
}

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm())
            {
                <div class="modal-header">
                    <h5 class="modal-title">Create Album</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                @Html.AntiForgeryToken()

                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.Id)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AlbumName, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.AlbumName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AlbumName)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
                </div>
            }
        </div>
    </div>
</div>
