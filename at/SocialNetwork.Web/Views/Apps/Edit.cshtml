@model AppViewModel

@{
    ViewData["Title"] = "Edit";
}



<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ProfileId" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AppName" class="control-label"></label>
                        <input asp-for="AppName" class="form-control" />
                        <span asp-validation-for="AppName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="PublishedStatus" /> @Html.DisplayNameFor(model => model.PublishedStatus)
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PublishedDate" class="control-label"></label>
                        <input asp-for="PublishedDate" class="form-control" />
                        <span asp-validation-for="PublishedDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ModificationDate" class="control-label"></label>
                        <input asp-for="ModificationDate" class="form-control" />
                        <span asp-validation-for="ModificationDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
