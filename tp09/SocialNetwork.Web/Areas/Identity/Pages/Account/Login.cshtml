@page
@model LoginModel

@{
    ViewData["SubTitle"] = "Log in";
    ViewData["AppClass"] = "app-full-height app-without-header app-full-width";
    ViewData["AppWithoutHeader"] = true;
    ViewData["AppWithoutSidebar"] = true;
    ViewData["AppWithoutContainer"] = true;
}

<!-- BEGIN login -->
<div class="login">
    <!-- BEGIN login-content -->
    <div class="login-content">
        <form id="account" method="post">
            <h1 class="text-center">
                <a href="/" class="brand-logo">
                    <img src="~/img/brand/camell_logo.png" alt="" width="150" />
                </a>
            </h1>
            <h2 class="text-center">Sign In</h2>
            <div class="text-muted text-center mb-4">
                For your protection, please verify your identity.
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label" asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control form-control-lg fs-15px" placeholder="Enter your username" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div class="d-flex">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="ms-auto text-muted">Forgot password?</a>
                </div>
                <input asp-for="Input.Password" class="form-control form-control-lg fs-15px" value="" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label fw-500" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary btn-lg d-block w-100 fw-500 mb-3">Sign In</button>
            </div>

            <div class="mb-3">
                <a class="btn btn-outline-dark w-100 fw-500 mb-3" href="" role="button" style="text-transform:none">
                    <i class="fab fa-github"></i> Sign in with Github
                </a>
            </div>

            <div class="mb-3">
                <a class="btn btn-outline-dark w-100 fw-500 mb-3" href="" role="button" style="text-transform:none">
                    <i class="fab fa-google"></i> Sign in with Google
                </a>
            </div>

            <!-- Minified CSS and JS -->
            <link rel="stylesheet"
                  href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
                  integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
                  crossorigin="anonymous">
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
                    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
                    crossorigin="anonymous">
            </script>
            <div class="text-center text-muted">
                Don't have an account yet? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a>.
            </div>
        </form>
    </div>
    <!-- END login-content -->
</div>
<!-- END login -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
